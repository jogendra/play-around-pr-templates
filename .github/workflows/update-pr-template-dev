name: Update PR Description

on:
  pull_request:
    branches:
      - dev
      
jobs:
  update_pr:
    runs-on: ubuntu-latest
    steps:
    - uses: tzkhan/pr-update-action@v2
      with:
        repo-token: "${{ secrets.GITHUB_TOKEN }}"
        base-branch-regex: '[a-z\d-_.\\/]+'
        body-template: |
          This is some **random** check you need to _pass_ before you can merge
